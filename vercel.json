{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "frontend/dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "http://localhost:8000/api/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/dist/$1",
            "check": true
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/.*",
            "dest": "/frontend/dist/index.html"
        }
    ]
}